<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="myrepresentative"
            type="com.example.android.politicalpreparedness.representative.model.Representative" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/representative_Photo"
            app:profileImage="@{myrepresentative.official.photoUrl}"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginBottom="@dimen/default_padding"
            app:srcCompat="@drawable/ic_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/representative_Title"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@{myrepresentative.office.name}"
            tools:text="representative title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/representative_Photo"
            app:layout_constraintStart_toEndOf="@id/representative_Photo"
         />

        <TextView
            android:id="@+id/representative_Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_padding"
            tools:text="representative name"
            android:text="@{myrepresentative.official.name}"
            app:layout_constraintStart_toStartOf="@+id/representative_Title"
            app:layout_constraintTop_toBottomOf="@id/representative_Title"
            app:layout_constraintEnd_toStartOf="@+id/webIcon"

      />

        <TextView
            android:id="@+id/representative_Party"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_padding"
            android:text="@{myrepresentative.official.party}"
            app:layout_constraintEnd_toStartOf="@+id/webIcon"
            app:layout_constraintStart_toStartOf="@+id/representative_Name"
            app:layout_constraintTop_toBottomOf="@id/representative_Name"
            tools:text="representative party" />

        <ImageView
            android:id="@+id/webIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/facebookIcon"
            app:layout_constraintTop_toTopOf="@+id/facebookIcon"
            app:srcCompat="@drawable/ic_www"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/facebookIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@id/twitterIcon"
            app:layout_constraintTop_toTopOf="@+id/twitterIcon"
            app:srcCompat="@drawable/ic_facebook"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/twitterIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/facebookIcon"
            app:srcCompat="@drawable/ic_twitter"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>